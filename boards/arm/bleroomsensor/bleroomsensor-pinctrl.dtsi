&pinctrl {
    i2c0_default_bme280: i2c0_default_bme280 {
        group1 {
            psels =
              <NRF_PSEL(TWIM_SDA, 0, 28)>,
				      <NRF_PSEL(TWIM_SCL, 0, 30)>;
            bias-pull-up;
        };
    };

    i2c0_sleep_bme280: i2c0_sleep_bme280 {
        group1 {
            psels =
            <NRF_PSEL(TWIM_SDA, 0, 28)>,
				    <NRF_PSEL(TWIM_SCL, 0, 30)>;
            low-power-enable;
        };
    };

    // SPI configured for SD Card
    spi0_default_bme280: spi0_default_bme280 {
        group1 {
            psels =
            <NRF_PSEL(SPIM_SCK, 0, 30)>,
            <NRF_PSEL(SPIM_MISO, 0, 00)>,
            <NRF_PSEL(SPIM_MOSI, 0,28)>;
        };
    };

    spi0_sleep_bme280: spi0_sleep_bme280 {
        group1 {
            psels =
            <NRF_PSEL(SPIM_SCK, 0, 30)>,
            <NRF_PSEL(SPIM_MISO, 0, 00)>,
            <NRF_PSEL(SPIM_MOSI, 0,28)>;
            low-power-enable;
        };
    };

};
